<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Portrait theme. -->

    <style name="top_ball">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>



    <style name="congrats">
        <item name="android:layout_below">@id/lil_balls_top</item>
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/font_indie_flower</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="stitches_portrait">
        <item name="android:layout_below">@id/congrats</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
    </style>

    <style name="its_an_app">
        <item name="android:layout_below">@id/congrats</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/font_roboto_thin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="scratches_portrait">
        <item name="android:layout_below">@id/stitches_portrait</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="smart_phone">
        <item name="android:layout_below">@id/stitches_portrait</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="android_left">
        <item name="android:layout_below">@id/stitches_portrait</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="android_right">
        <item name="android:layout_below">@id/stitches_portrait</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>

    <style name="bottomball">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Landscape theme. -->

    <style name="top_ball_land">
        <item name="android:rotation">-90</item>
        <item name="android:scaleY">7</item>
        <item name="android:scaleX">7</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
     </style>

    <style name="congrats_land">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">48sp</item>
        <item name="android:fontFamily">@font/font_indie_flower</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginRight">78dp</item>
    </style>

    <style name="stitches_portrait_land">
        <item name="android:layout_below">@id/congrats</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">265dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">95dp</item>
    </style>

    <style name="its_an_app_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/congrats</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/font_roboto_thin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/Black</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">113dp</item>
    </style>

    <style name="scratches_portrait_land">
        <item name="android:rotation">-90</item>
        <item name="android:scaleY">2.5</item>
        <item name="android:scaleX">2.5</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignLeft">@id/lil_balls_top_land</item>
        <item name="android:layout_marginLeft">90dp</item>
    </style>

    <style name="smart_phone_land">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignLeft">@id/lil_balls_top_land</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginTop">80dp</item>
    </style>

    <style name="android_left_land">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">295dp</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>

    <style name="android_middle_land">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">385dp</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>

    <style name="android_right_land">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">475dp</item>
        <item name="android:layout_marginBottom">35dp</item>
    </style>

    <style name="bottom_ball_land">
        <item name="android:rotation">-90</item>
        <item name="android:scaleY">7</item>
        <item name="android:scaleX">7</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>



</resources>
